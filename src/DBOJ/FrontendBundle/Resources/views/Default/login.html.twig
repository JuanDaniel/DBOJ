{% extends 'FrontendBundle::layout.html.twig' %}

{% block content %}
<!-- PAGE HEADER-->
<div class="row">
    <div class="col-sm-12">
        {% include 'CommonBundle:Extras:page_header.html.twig'%}
    </div>
</div>
<div class="row">
    <div class="visible col-md-6 col-md-offset-3" id="login_bg">
        <div class="box border primary">
            <div class="box-title">
                <h4><i class="fa fa-key"></i>Autenticarse</h4>                
            </div>
            <div class="box-body">
                <form role="form" action="{{ path('frontendBundle_login_check') }}" method="POST">
                    <div class="form-group">
                        <i class="fa fa-user"></i>                        
                        <label for="username">Usuario</label>
                        <input type="text" class="form-control" name="_username" id="username" placeholder="Entre su usuario">
                    </div>
                    <div class="form-group"> 
                        <i class="fa fa-lock"></i>
                        <label for="password">Clave</label>
                        <input type="password" class="form-control" name="_password" id="password" placeholder="Entre su clave">
                    </div>
                    <div>
                        <button type="submit" class="btn btn-danger pull-right">Acceder</button>
                    </div>                   
                </form>
                <div class="clearfix"></div>
                <div class="login-helpers">
                    <a href="login_bg.html#" onclick="swapScreen('forgot_bg');
                            return false;">¿No recuerda la clave se acceso?</a> 
                    <a href="login_bg.html#" onclick="swapScreen('register');
                            return false;" class="pull-right">¿Desea crearse una cuenta?</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-md-offset-3" id="forgot_bg" >
        <div class="box border primary">
            <div class="box-title">
                <h4><i class="fa fa-thumbs-o-up"></i>Restablecer clave</h4>                
            </div>
            <div class="box-body">
                <form role="form" action="{{ path('frontendBundle_login_check') }}" method="POST">
                    <div class="form-group">
                        <i class="fa fa-envelope"></i>                        
                        <label for="username">Correo electrónico</label>
                        <input type="text" class="form-control" name="_email" id="email" placeholder="Entre su correo electrónico">
                    </div>                   
                    <div>
                        <button type="submit" class="btn btn-danger pull-right">Restablecer</button>
                    </div>
                    <div class="clearfix"></div>
                </form>
                <div class="login-helpers">
                    <a href="login_bg.html#" onclick="swapScreen('login_bg');
                            return false;">Regresar</a> <br>
                </div>
            </div>
        </div>
    </div> 

    <div class="col-md-6 col-md-offset-3" id="register" >
        <div class="box border primary">
            <div class="box-title">
                <h4><i class="fa fa-plus"></i>Registrar usuario</h4>                
            </div>
            <div class="box-body">
                <form role="form" action="{{ path('frontend_user_registrer') }}" method="POST">
                    <div class="form-group"> 
                        {{ form_errors(form.name) }}
                        <i class="fa fa-bars"></i>
                        <label>Nombre</label>
                        {{ form_widget(form.name) }}                        
                    </div>
                    <div class="form-group">
                         {{ form_errors(form.lastname) }}
                        <i class="fa fa-bars"></i>                       
                        <label>Apellidos</label>
                        {{ form_widget(form.lastname) }}                        
                    </div>      
                     <div class="form-group">                        
                        {{ form_errors(form.sex) }}
                        <i class="fa fa-check"></i> 
                        <label>Sexo</label>
                        {{ form_widget(form.sex) }}                        
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.email) }}
                        <i class="fa fa-envelope"></i>                        
                        <label>Correo electrónico</label>
                        {{ form_widget(form.email) }}                         
                    </div>                    
                     <div class="form-group">                        
                        {{ form_errors(form.user) }}
                        <i class="fa fa-user"></i> 
                        <label>Usuario</label>
                        {{ form_widget(form.user) }}                        
                    </div>  
                    <div class="form-group">                        
                        {{ form_errors(form.password) }}
                        <i class="fa fa-lock"></i>
                        <label>Clave</label>
                        {{ form_widget(form.password) }}
                    </div>
                    <div>
                        <button type="submit" class="btn btn-danger pull-right">Registrar</button>
                        {{ form_widget(form._token) }}
                    </div>
                    <div class="clearfix"></div>
                </form>
                <div class="login-helpers">
                    <a href="login_bg.html#" onclick="swapScreen('login_bg');
                            return false;">Regresar</a> <br>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- JAVASCRIPTS -->
<!-- JQUERY -->
<script src="{{ asset('bundles/backend/js/jquery/jquery-1.10.2.min.js') }}"></script>
<!-- BACKSTRETCH -->
<script type="text/javascript" src="{{ asset('bundles/backend/js/backstretch/jquery.backstretch.min.js') }}"></script>
<script type="text/javascript">
                        function swapScreen(id) {
                            jQuery('.visible').removeClass('visible animated fadeInUp');
                            jQuery('#' + id).addClass('visible animated fadeInUp');
                        }
</script>
<!-- /JAVASCRIPTS -->
{% endblock %}