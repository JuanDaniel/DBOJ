{% extends 'FrontendBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-sm-12">
        {% include 'CommonBundle:Extras:page_header.html.twig'%}
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <div class="box border blue">            
            <div class="box-title">                
                <h4><i class="fa fa-question-circle"></i>{{entity.title}}</h4>           
                <div class="tools">
                    <a class="collapse" href="javascript:;">
                        <i class="fa fa-chevron-up"></i>
                    </a>                    
                </div>
            </div>            
            <div class="box-body">
                <a href="#box-config" class="btn btn-warning pull-right" data-toggle="modal"><i class="fa fa-retweet"></i>Enviar solución</a>
                <div class="clearfix"></div>
                <div class="well">
                    <h4>Descripión del problema</h4>
                    <p>{{entity.description}}</p>
                </div> 
                <div class="row-fluid">
                    <div class="col-ms-6 ui-sortable">
                        <div class="box border blue ">

                            <div class="toolbox">
                                <div class="btn-group">
                                    <button class="btn btn-default" type="button"><i class="fa fa-copy"></i>Copiar</button>                                    
                                </div>
                            </div>
                            <div class="box-body">
                                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 165px;"><div data-rail-visible="1" data-always-visible="1" data-height="165px" class="scroller" style="overflow: hidden; width: auto; height: 165px;">
                                        <p>{{entity.fileSql}}</p>
                                    </div><div class="slimScrollBar" style="background: none repeat scroll 0% 0% rgb(161, 178, 189); width: 7px; position: absolute; top: 68px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 1px; height: 97.2321px;"></div><div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: block; border-radius: 7px; background: none repeat scroll 0% 0% rgb(51, 51, 51); opacity: 0.1; z-index: 90; right: 1px;"></div></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-ms-6">

                    </div>
                </div>                
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="box border blue">
            <div class="box-title">
                <h4><i class="fa fa-bell"></i>Metadatos</h4>
                <div class="tools">
                    <span class="badge badge-red">Warning</span>
                </div>
            </div>
            <div class="box-body">
                <div class="info-article inside">
                    <span><i class="fa fa-clock-o"></i>Tiempo de ejecución: {{entity.time}}</span>
                    <span><i class="fa fa-ellipsis-h"></i>Memoria consumida: {{entity.memory}}</span>
                    <span><i class="fa fa-mail-forward"></i>Total de envíos: {{total}}</span>
                    <span><i class="fa  fa-check"></i>Aceptados: {{accept}}</span>
                </div>                  
            </div>
        </div>
        <div class="box border blue">
            <div class="box-title">
                <h4><i class="fa fa-bell"></i>Modelo E-R</h4>                
            </div>
            <div class="box-body">
                <div class="esquema">
                    <img src='{{asset('bundles/backend/img/site/D_EntidadRelacion.jpg')}}'/>
                </div>                  
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Enviar solución</h4>
            </div>
            <form action="{{ path('sending_create', {'id': entity.id}) }}" method="POST">
            <div class="modal-body">
                <div class="form-group">
                    {{ form_errors(form.answer) }}
                    <label for="">Nombre</label>
                    {{ form_widget(form.answer) }}
                </div>   
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Enviar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                {{ form_widget(form._token) }}
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
