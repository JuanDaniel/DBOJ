{% extends 'BackendBundle::layout.html.twig' %}

{% block content %}
<!-- PAGE HEADER-->
<div class="row">
    <div class="col-sm-12">
        <div class="page-header">
            <!-- STYLER -->

            <!-- /STYLER -->
            <!-- BREADCRUMBS -->
            <ul class="breadcrumb">
                <li>
                    <i class="fa fa-home"></i>
                    <a href="index.html">Home</a>
                </li>
                <li>Dashboard</li>
            </ul>
            <!-- /BREADCRUMBS -->
            <div class="clearfix">
                <h3 class="content-title pull-left">Dashboard</h3>
                <!-- DATE RANGE PICKER -->
                <span class="date-range pull-right">
                    <div class="btn-group">
                        <a class="js_update btn btn-default" href="index.html#">Today</a>
                        <a class="js_update btn btn-default" href="index.html#">Last 7 Days</a>
                        <a class="js_update btn btn-default hidden-xs" href="index.html#">Last month</a>

                        <a id="reportrange" class="btn reportrange">
                            <i class="fa fa-calendar"></i>
                            <span></span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                    </div>
                </span>
                <!-- /DATE RANGE PICKER -->
            </div>
            <div class="description">Overview, Statistics and more</div>
        </div>
    </div>
</div>
<!-- /PAGE HEADER -->
<div class="row">
    <div class="col-md-12">
        <!-- BOX -->
        <div class="box border green">
            <div class="box-title">
                <h4><i class="fa fa-table"></i>Editar usuario</h4>
            </div>
            <div class="box-body">
                <form action="{{ path('user_update', {'id': entity.id}) }}" method="POST">
                    <div class="row">
                        <div class="col-md-6 ">
                            <div class="form-group">
                                {{ form_errors(edit_form.name) }}
                                <label for="">Nombre</label>
                                {{ form_widget(edit_form.name) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(edit_form.user) }}
                                <label for="">Usuario</label>
                                {{ form_widget(edit_form.user) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(edit_form.email) }}
                                <label for="">Correo</label>
                                {{ form_widget(edit_form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(edit_form.password) }}
                                <label for="">Clave</label>
                                {{ form_widget(edit_form.password) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_errors(edit_form.lastname) }}
                                <label for="">Apellidos</label>
                                {{ form_widget(edit_form.lastname) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(edit_form.sex) }}
                                <label for="">Sexo</label>
                                {{ form_widget(edit_form.sex) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(edit_form.role) }}
                                <label for="">Rol</label>
                                {{ form_widget(edit_form.role) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{path('user')}}" class="btn btn-primary pull-right">Cerrar</a>   
                            <button type="submit" class="btn btn-primary pull-right">Editar</button>
                            {{ form_widget(edit_form._token) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="footer-tools">
    <span class="go-top">
        <i class="fa fa-chevron-up"></i> Top
    </span>
</div>
{% endblock %}