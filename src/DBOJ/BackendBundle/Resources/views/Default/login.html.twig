{% extends '::base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/css/cloud-admin.css') }}" >
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/css/cloud-new.css') }}" >
<link href="{{ asset('bundles/backend/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
<!-- ANIMATE -->
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/css/animatecss/animate.min.css') }}" />
<!-- FONTS -->
<link href="{{ asset('bundles/backend/css/fonts/fonts.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body_class %}class="login"{% endblock %}
{% block body %}
<section id="page">
    <!-- HEADER -->
    <header>
        <!-- NAV-BAR -->
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div id="logo">
                        <a href="#"><img src="{{ asset('bundles/backend/img/logo/judge.png') }}" height="40" alt="logo name" /></a>
                    </div>
                </div>
            </div>
        </div>
        <!--/NAV-BAR -->
    </header>
    <!--/HEADER -->
    <!-- LOGIN -->
    <section id="login_bg" class="visible">
        <div class="container"> 
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    {% if error %}
                    <span class="alert alert-danger" style="display: block; margin-top: 10px;">{{ error.getMessage }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="row">                
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-box-plain">
                        <h2 class="bigintro">Autenticación</h2>
                        <div class="divide-40"></div>
                        <form role="form" action="{{ path('backendBundle_login_check') }}" method="POST">
                            <div class="form-group">
                                <label for="username">Usuario</label>
                                <i class="fa fa-user"></i>
                                <input type="text" class="form-control" name="_username" id="username">
                            </div>
                            <div class="form-group"> 
                                <label for="password">Clave</label>
                                <i class="fa fa-lock"></i>
                                <input type="password" class="form-control" name="_password" id="password">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-danger">Acceder</button>
                            </div>
                        </form>
                        <div class="login-helpers">
                            <a href="login_bg.html#" onclick="swapScreen('forgot_bg');
                                    return false;" class="pull-right">¿No recuerda la clave se acceso?</a> <br>                                   
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--/LOGIN -->
    <!-- FORGOT PASSWORD -->
    <section id="forgot_bg">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-box-plain">
                        <h2 class="bigintro">Restablecer Clave</h2>
                        <div class="divide-40"></div>
                        <form role="form">
                            <div class="form-group">
                                <label for="email">Introduzca su dirección de correo</label>
                                <i class="fa fa-envelope"></i>
                                <input type="email" class="form-control" id="email" >
                            </div>
                            <div>
                                <button type="submit" class="btn btn-info">Solicitar instrucciones</button>
                            </div>
                        </form>
                        <div class="login-helpers">
                            <a href="login_bg.html#" onclick="swapScreen('login_bg');
                                    return false;">Regresar</a> <br>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- FORGOT PASSWORD -->
</section>
<!--/PAGE -->
{% endblock %}

{% block javascripts %}
<!-- JAVASCRIPTS -->
<!-- JQUERY -->
<script src="{{ asset('bundles/backend/js/jquery/jquery-1.10.2.min.js') }}"></script>
<!-- BACKSTRETCH -->
<script type="text/javascript" src="{{ asset('bundles/backend/js/backstretch/jquery.backstretch.min.js') }}"></script>
<script type="text/javascript">
 function swapScreen(id) {
  jQuery('.visible').removeClass('visible animated fadeInUp');
  jQuery('#' + id).addClass('visible animated fadeInUp');
}
</script>
<!-- /JAVASCRIPTS -->
{% endblock %}