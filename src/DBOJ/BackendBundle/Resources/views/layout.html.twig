{% extends '::base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/css/cloud-admin.css') }}" >
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/css/cloud-new.css') }}" >
<link rel="stylesheet" type="text/css"  href="{{ asset('bundles/backend/css/themes/default.css') }}" id="skin-switcher" >
<link rel="stylesheet" type="text/css"  href="{{ asset('bundles/backend/css/responsive.css') }}" >
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/js/jquery-ui-1.10.3.custom/css/custom-theme/jquery-ui-1.10.3.custom.min.css') }}" />
<!--[if lt IE 9]>
    <script src="{{ asset('bundles/backend/js/flot/excanvas.min.js') }}"></script>
    <script src="{{ asset('bundles/backend/js/html5.js') }}"></script>
    <script src="{{ asset('bundles/backend/js/css3-mediaqueries.js') }}"></script>
<![endif]-->
<link href="{{ asset('bundles/backend/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
<!-- ANIMATE -->
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/css/animatecss/animate.min.css') }}" />
<!-- DATE RANGE PICKER -->
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/js/bootstrap-daterangepicker/daterangepicker-bs3.css') }}" />
<!-- TODO -->
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/backend/js/jquery-todo/css/styles.css') }}" />
<!-- FONTS -->
<link href="{{ asset('bundles/backend/css/fonts/fonts.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<!-- HEADER -->
<header class="navbar clearfix" id="header">
    <div class="container">
        <div class="navbar-brand">
            <!-- COMPANY LOGO -->
            <a href="{{ path('dashboard') }}">
                <img src="{{ asset('bundles/backend/img/logo/judge.png') }}" alt="Cloud Admin Logo" class="img-responsive" height="30" width="120">
            </a>
            <!-- /COMPANY LOGO -->
            <!-- TEAM STATUS FOR MOBILE -->
            <div class="visible-xs">
                <a href="index.html#" class="team-status-toggle switcher btn dropdown-toggle">
                    <i class="fa fa-users"></i>
                </a>
            </div>
            <!-- /TEAM STATUS FOR MOBILE -->
            <!-- SIDEBAR COLLAPSE -->
            <div id="sidebar-collapse" class="sidebar-collapse btn">
                <i class="fa fa-bars" 
                   data-icon1="fa fa-bars" 
                   data-icon2="fa fa-bars" ></i>
            </div>
            <!-- /SIDEBAR COLLAPSE -->
        </div>
        {% render(controller('BackendBundle:Default:getNotifications')) %}
    </div>    
</header>
<!--/HEADER -->

<!-- PAGE -->
<section id="page">
    <!-- SIDEBAR -->
    <div id="sidebar" class="sidebar">
        <div class="sidebar-menu nav-collapse">
            <div class="divide-20"></div>
            <!-- SEARCH BAR -->
            <div id="search-bar">
                <input class="search" type="text" placeholder="Search"><i class="fa fa-search search-icon"></i>
            </div>
            <!-- /SEARCH BAR -->

            <!-- SIDEBAR MENU -->
        {% include 'BackendBundle:Extras:sidebar.html.twig' %}
            <!-- /SIDEBAR MENU -->
        </div>
    </div>
    <!-- /SIDEBAR -->
    <div id="main-content">
        <!-- SAMPLE BOX CONFIGURATION MODAL FORM-->
        <div class="modal fade" id="box-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Box Settings</h4>
                    </div>
                    <div class="modal-body">
                        Here goes box setting content.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /SAMPLE BOX CONFIGURATION MODAL FORM-->
        <div class="container">
            <div class="row">
                <div id="content" class="col-lg-12">
              {% block content %}{% endblock %}
                </div><!-- /CONTENT-->
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('bundles/backend/js/jquery/jquery-2.0.3.min.js') }}"></script>
<!-- JQUERY UI-->
<script src="{{ asset('bundles/backend/js/jquery-ui-1.10.3.custom/js/jquery-ui-1.10.3.custom.min.js') }}"></script>
<!-- BOOTSTRAP -->
<script src="{{ asset('bundles/backend/bootstrap-dist/js/bootstrap.min.js') }}"></script>
<!-- COOKIE -->
<script type="text/javascript" src="{{ asset('bundles/backend/js/jQuery-Cookie/jquery.cookie.min.js') }}"></script>
<!-- JsRouting -->
<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

{% block javascripts_owner %}{% endblock %}

<!-- CUSTOM SCRIPT -->
<script src="{{ asset('bundles/backend/js/script.js') }}"></script>
<script>
    jQuery(document).ready(function() {
        App.init(); //Initialise plugins and elements
    });
</script>
{% endblock %}